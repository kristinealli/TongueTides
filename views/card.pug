extends app

block card
  section(class=`flashcards`)
    .card(class=`card-${side}`)
      .card-header
      h1.card-title= side
      #content
        h2= text
        if side === 'english' && hint
          p.hint
            i= hint
      .card-flip-wrap
        a(href=`/cards/${id}?side=${sideToShow}`)
          img.card-flip(src='/static/img/flip.svg')
          p(class=`card-${side}`) flip card
      .card-next
        a(href='/cards')
          img.card-flip(src="/static/img/next.svg")
          p(class=`card-${side}`) next word
    script(src='/static/js/app.js')
